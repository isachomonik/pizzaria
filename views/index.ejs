<%- include('./partials/header.ejs') %>

<body>
    <link rel="stylesheet" href="/css/index.css">

    
    <main>
        
        <% for(let p of pizzas){ %>
        <article>
            <img src="<%= p.img %>" alt="<%= p.nome%>">
            <a href="/pizzas/<%= p.id %>">Ver Mais</a>

            <form action="/pizzas/addCart" method="post">
                <input type="hidden" value="<%= p.id %>" name="theChosenOne">
                <button type="submit">+Add</button>
            </form>

            <div><%= p.nome %></div>
            <span>R$ <%= p.preco %></span>
        </article>
        <% } %>
        
    </main>
</body>

</html>